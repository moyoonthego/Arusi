<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdropwelcome"
    android:gravity="top|center"
    tools:context="com.moyo.arusi.YourMatchActivity"
    android:orientation="vertical">

    <TextView
        android:visibility="visible"
        android:id="@+id/whoareyou"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How is this match?"
        android:layout_marginBottom="20dp"
        android:textSize="44dp"
        android:textColor="#FFF"
        android:gravity="left"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:src="@drawable/appicon1"
        app:civ_border_width="3dp"
        app:civ_border_color="#FFF"/>

    <ImageView
        android:id="@+id/profileimageview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_forward_black_24dp"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/disclaimer"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    This will not be shared until there is mutual interest."
        android:textColor="#FFF"
        android:gravity="center"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Content here -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fName"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFF"
                        android:layout_marginBottom="15dp"
                        android:ems="10"
                        android:text="First Name"
                        android:textColor="#FFF"
                        android:textColorHighlight="#FFF"
                        android:textColorHint="#ddd"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/lName"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textColor="#FFF"
                        android:textSize="24dp"
                        android:textColorHint="#ddd"
                        android:text="Last Name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="122dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFF"
                        android:ems="10"
                        android:inputType="number"
                        android:text="Age"
                        android:textSize="24dp"
                        android:textColor="#FFF"
                        android:textColorHighlight="#FFF"
                        android:textColorHint="#ddd" />

                    <TextView
                        android:id="@+id/profession"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:backgroundTint="#FFF"
                        android:ems="10"
                        android:textSize="24dp"
                        android:text="Profession"
                        android:textColor="#FFF"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/marital_status"
                        android:layout_width="128dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/background_button"
                        android:backgroundTint="#1f488e"
                        android:entries="@array/marital_status"
                        android:text="Marital Status"
                        android:textColor="#FFF"
                        android:theme="@style/spinnerTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/muslim_cast"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_button"
                        android:backgroundTint="#1f488e"
                        android:entries="@array/marital_status"
                        android:text="Cast"
                        android:textColor="#FFF"
                        android:theme="@style/spinnerTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/education"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_button"
                        android:backgroundTint="#1f488e"
                        android:entries="@array/marital_status"
                        android:text="Education"
                        android:textColor="#FFF"
                        android:theme="@style/spinnerTheme" />
                </LinearLayout>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:backgroundTint="#1f488e"
                    android:layout_marginBottom="40dp"
                    android:text="Location"
                    android:textColor="#FFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textSize="18dp"
                        android:entries="@array/marital_status"
                        android:text="Height (cm)"
                        android:textColorHint="#ddd"
                        android:textColor="#FFF"
                        android:theme="@style/spinnerTheme" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:textColorHint="#ddd"
                        android:textSize="18dp"
                        android:entries="@array/marital_status"
                        android:hint="Weight (kg)"
                        android:textColor="#FFF"
                        android:theme="@style/spinnerTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mothertongue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFF"
                        android:ems="10"
                        android:text="Mother Tongue"
                        android:textColor="#FFF"
                        android:textColorHighlight="#FFF"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/complexion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textColor="#FFF"
                        android:backgroundTint="#FFF"
                        android:textColorHint="#ddd"
                        android:textSize="18dp"
                        android:text="Complexion" />

                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/familyinfo"
                    android:layout_marginBottom="30dp"
                    android:layout_width="260dp"
                    android:layout_height="250dp"
                    android:backgroundTint="#FFF"
                    android:ems="10"
                    android:background="@drawable/textbox"
                    android:gravity="top|left"
                    android:scrollbars="vertical"
                    android:textColor="#222"
                    android:textColorHint="#aaa" />

            </LinearLayout>

        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/no"
            app:backgroundTint="#870b06"
            android:layout_width="wrap_content"
            android:outlineAmbientShadowColor="@color/cardview_dark_background"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="35dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#09820c"
            android:outlineAmbientShadowColor="@color/cardview_dark_background"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="35dp"
            app:srcCompat="@android:drawable/btn_star_big_off"
            />

    </FrameLayout>
</LinearLayout>